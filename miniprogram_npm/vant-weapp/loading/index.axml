<view class="van-loading custom-class" style="width: {{ size }}; height: {{ size }}">
  <view class="van-loading__spinner van-loading__spinner--{{ type }}" style="color: {{ color }};">
    <view
      a:if="{{ type === 'spinner' }}"
      a:for="item in 12"
      a:key="index"
      class="van-loading__dot"
    />
  </view>
</view>