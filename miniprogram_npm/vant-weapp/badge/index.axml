<import-sjs from="../wxs/utils.sjs" name="utils"/>
<view
  class="{{ utils.bem('badge', { active }) }} van-hairline custom-class"
  hover-class="van-badge--hover"
  hover-stay-time="70"
  onTap="onClick"
>
  <view class="van-badge__text">
    <van-info
      a:if="{{ info !== null }}"
      info="{{ info }}"
      custom-style="right: 4px"
    />
    {{ title }}
  </view>
</view>