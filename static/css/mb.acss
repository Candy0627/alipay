/* 单行文字超出省略 */
.ep-one {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/* 多行文字超出省略 */
.ep-two {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.ep-three {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    word-break: break-all;
}